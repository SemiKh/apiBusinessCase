{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table table-dark table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>DateAcquisition</th>
                <td>{{ transaction.dateAcquisition ? transaction.dateAcquisition|date('Y-m-d H:i:s') : '' }}</td>
