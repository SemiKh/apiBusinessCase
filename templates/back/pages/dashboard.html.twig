{% extends 'back/base.html.twig' %}
{% block body %}
	<h1>Dashboard :</h1>


	<div class="row">
		<div class="col-lg-6 col-md-12">
			<h3>Dernier utilisateur enregistré :</h3>
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>Pseudo :
						</th>
						<th>Crée à :
						</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>
								<p>
									{{ user.username }}</p>
							</td>
							<td>

								{{ user.createdAt|date("d/m/Y") }}

							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-lg-6 col-md-12">
			<h3>Dernière nft enregistré :</h3>
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>Titre :</th>
						<th>Date de drop :</th>
					</tr>
				</thead>
				<tbody>
					{% for nft in nfts %}
						<tr>
							<td>
								{{ nft.titre }}
							</td>
							<td>
								{{ nft.dateDrop|date("d/m/Y") }}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6 col-md-12">
			<h3>Dernière transaction :</h3>
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>Date d'acquisition :</th>
						<th>Nft échanger :</th>
					</tr>
				</thead>
				<tbody>
					{% for transaction in transactions %}
						<tr>
							<td>

								{{ transaction.dateAcquisition|date("d/m/Y") }}

							</td>
							<td>
								{{ transaction.nft.titre }}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}

{% block title %}
	Dashboard
{% endblock %}
