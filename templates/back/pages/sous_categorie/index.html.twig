{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Sous-Categorie index</h1>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(
                    sous_categories,
                    'Id',
                    'id')|raw }}Id</th>
                <th>{{ knp_pagination_sortable(
                    sous_categories,
                    'Sous-Categorie',
                    'nomSousCategorie')|raw }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sous_categorie in sous_categories %}
            <tr>
                <td>{{ sous_categorie.id }}</td>
                <td>{{ sous_categorie.nomSousCategorie }}</td>
                <td>
                    <a href="{{ path('app_admin_sous_categorie_show', {'id': sous_categorie.id}) }}"><i class="fa-light fa-eye" style="color: #f0d50f;"></i></a>
                    <a href="{{ path('app_admin_sous_categorie_edit', {'id': sous_categorie.id}) }}"><i class="fa-light fa-pen-to-square" style="color: #f0d50f;"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center mt-2">
		{{ knp_pagination_render(sous_categories) }}
	</div>
    <a href="{{ path('app_admin_sous_categorie_new') }}">Create new</a>
{% endblock %}
