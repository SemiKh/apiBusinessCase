{% extends 'back/base.html.twig' %}

{% block body %}
	<h1>Categorie index</h1>

	<table class="table table-dark table-striped table-hover">
		<thead>
			<tr>
				<th>{{ knp_pagination_sortable(
                    categories,
                    'id',
                    'id')|raw }}</th>
				<th>{{ knp_pagination_sortable(
                    categories,
                    'Categorie',
                    'nomCategorie')|raw }}</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in categories %}
				<tr>
					<td>{{ categorie.id }}</td>
					<td>{{ categorie.nomCategorie }}</td>
					<td>
						<a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}">
							<i class="fa-light fa-eye" style="color: #f0d50f;"></i>
						</a>
						<a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">
							<i class="fa-light fa-pen-to-square" style="color: #f0d50f;"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="navigation d-flex justify-content-center mt-2">
		{{ knp_pagination_render(categories) }}
	</div>
	<a href="{{ path('app_admin_categorie_new') }}">Create new</a>
{% endblock %}
