{% extends 'back/base.html.twig' %}


{% block body %}
	<h1>Cours Nft index</h1>

	<table class="table table-dark table-striped table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>CoursNft24h</th>
				<th>DateNft</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for cours_nft in cours_nfts %}
				<tr>
					<td>{{  knp_pagination_sortable(cours_nft.id)|raw }}</td>
					<td>{{ cours_nft.coursNft24h }}</td>
					<td>{{  knp_pagination_sortable(cours_nft.dateNft ? cours_nft.dateNft|date('d-m-Y') : '' )|raw}}</td>
					<td>
						<a href="{{ path('app_admin_cours_nft_show', {'id': cours_nft.id}) }}"><i class="fa-light fa-eye" style="color: #f0d50f;"></i></a>
						<a href="{{ path('app_admin_cours_nft_edit', {'id': cours_nft.id}) }}"><i class="fa-light fa-pen-to-square" style="color: #f0d50f;"></i></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="navigation d-flex justify-content-center mt-2">
		{{ knp_pagination_render(cours_nfts) }}
	</div>
	<a href="{{ path('app_admin_cours_nft_new') }}">Create new</a>
{% endblock %}
